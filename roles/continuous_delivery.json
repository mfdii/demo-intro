{
  "name": "continuous_delivery",
  "description": "Jenkins and Gerrit Server",
  "json_class": "Chef::Role",
  "default_attributes": {
    "build_essential": {
      "compiletime": true
    },
    "gerrit": {
      "auth_method" : "DEVELOPMENT_BECOME_ANY_ACCOUNT",
      "http_proxy": {
        "host_name": "review.localdomain"
      },
      "canonical_url": "http://review.localdomain/",
      "smtp_server": "localhost",
      "smtp_from": "Code Review <gerrit@review.localdomain>"
    },
    "jenkins": {
      "http_proxy": {
        "host_name": "build.localdomain",
        "variant": "nginx"
      },
      "server": {
        "plugins": [
          "git",
          "build-pipeline-plugin",
          "github-api",
          "github",
          "greenballs",
          "analysis-core",
          "warnings",
          "parameterized-trigger",
          "cobertura",
          "sounds",
          "throttle-concurrents",
          "build-flow-plugin",
          "groovyaxis"
        ]
      }
    },
    "cd-tools": {
      "jenkins": {
        "git_email": "jenkins@build.localdomain",
        "git_name": "Jenkins",
        "manual_steps": [ "prod" ],
        "pipeline": [ "integration", "staging", "prod" ],
        "chef_server_url": "https://chef.localdomain/organizations/opscode",
        "node_name": "build.localdomain",
        "client_key": "/var/lib/jenkins/.chef/jenkins@chef.localdomain.pem"
      },
      "gerrit": {
        "hostname": "localhost",
        "front_end_url": "http://review.localdomain/"
      }
    }
  },
  "override_attributes": {
  },
  "chef_type": "role",
  "run_list": [
    "recipe[yum]",
    "recipe[build-essential]",
    "recipe[nginx::source]",
    "recipe[java]",
    "recipe[jenkins]",
    "recipe[postgresql::server]",
    "recipe[gerrit]",
    "recipe[foodcritic]",
    "recipe[nodejs]",
    "recipe[maven]",
    "recipe[sqlite]",
    "recipe[redisio::install]",
    "recipe[redisio::enable]",
    "recipe[metarepo]",
    "recipe[cd-tools]"
  ],
  "env_run_lists": {
  }
}
